@model WebApplication1.Models.Student

@{
    Layout = "_Layout";
}


<h2>删除学生</h2>

<h3>您确定要删除以下学生吗？</h3>
<div>
    <h4>学生</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            学生ID
        </dt>
        <dd class="col-sm-10">
            @Model.StuId
        </dd>
        <dt class="col-sm-2">
            学生姓名
        </dt>
        <dd class="col-sm-10">
            @Model.StuName
        </dd>
        <dt class="col-sm-2">
            班级
        </dt>
        <dd class="col-sm-10">
            @Model.StuClass
        </dd>
        <dt class="col-sm-2">
            初始密码
        </dt>
        <dd class="col-sm-10">
            @Model.StuInitpwd
        </dd>
    </dl>

    <form asp-action="ConfirmDelete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" name="id" value="@Model.StuId" />
        <input type="submit" value="删除" class="btn btn-danger" /> |
        <a asp-action="ShowAllStudent" class="btn btn-default">取消</a>
    </form>
</div>
