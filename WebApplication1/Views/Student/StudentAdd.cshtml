@model WebApplication1.Models.Student

@{
    Layout = "_Layout";
}

<div>
    <section class="panel">
        <header class="panel-heading">
            <h2 class="panel-title">新增学生</h2>
        </header>
        <div class="panel-body">
            @if (ViewData.ModelState.ContainsKey("StuId"))
            {
                <div class="alert alert-danger">
                    @ViewData.ModelState["StuId"].Errors[0].ErrorMessage
                 </div>
            }
            <form class="form-horizontal form-bordered" method="post" action="@Url.Action("StudentAdd", "Student")">
                <div class="form-group">
                    <label class="col-md-3 control-label" for="StuId">学号</label>
                    <div class="col-md-6">
                        <input type="number" class="form-control" name="StuId" id="StuId" required>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label" for="StuName">姓名</label>
                    <div class="col-md-6">
                        <input type="text" class="form-control" name="StuName" id="StuName" required>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label" for="StuClass">班级</label>
                    <div class="col-md-6">
                        <input type="text" class="form-control" name="StuClass" id="StuClass" required>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label" for="StuInitpwd">初始密码</label>
                    <div class="col-md-6">
                        <input type="password" class="form-control" name="StuInitpwd" id="StuInitpwd" required>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label"></label>
                    <div class="col-sm-8">
                        <div class="row">
                            <div class="col-sm-2">
                                <button type="submit" class="mb-xs mt-xs mr-xs btn btn-primary">保存</button>
                            </div>
                            <div class="visible-xs mb-md"></div>
                            <div class="col-sm-3">
                                <a href="@Url.Action("ShowAllStudent", "Student")" class="mb-xs mt-xs mr-xs btn btn-default">返回</a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </section>
</div>
