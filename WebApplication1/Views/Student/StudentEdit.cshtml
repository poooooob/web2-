@using WebApplication1.Models
@{
    Layout = "_Layout";
}

<header class="panel-heading">
    <div class="panel-actions">
    </div>

    <h2 class="panel-title">学生管理详细页面</h2>
</header>
<div class="panel-body">
    <form class="form-horizontal form-bordered" method="post" action="@Url.Action("SaveStudent", "Student")">
        <div class="form-group">
            <label class="col-md-3 control-label" for="inputReadOnly">学生ID</label>
            <div class="col-md-6">
                <input type="text" value="@Model.StuId" name="StuId" class="form-control" readonly="readonly">
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-3 control-label" for="inputDefault">学生姓名</label>
            <div class="col-md-6">
                <input type="text" class="form-control" name="StuName" value="@Model.StuName">
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-3 control-label" for="inputDefault">所属班级</label>
            <div class="col-md-6">
                <input type="text" class="form-control" name="StuClass" value="@Model.StuClass">
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-3 control-label" for="inputDefault">初始密码</label>
            <div class="col-md-6">
                <input type="text" class="form-control" name="StuInitpwd" value="@Model.StuInitpwd">
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-3 control-label"></label>
            <div class="col-sm-8">
                <div class="row">
                    <div class="col-sm-2">
                        <button type="submit" class="mb-xs mt-xs mr-xs btn btn-primary">保存</button>
                    </div>
                    <div class="visible-xs mb-md"></div>
                    <div class="col-sm-3">
                        <button type="button" class="mb-xs mt-xs mr-xs btn btn-default" onclick="window.history.back();">返回</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
